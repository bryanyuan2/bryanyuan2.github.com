{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js/build",
    "rootDir": "./js/app",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./js/app/**/*"],
  "exclude": ["node_modules"]
}